<!-- this form is not directly associated with a model, so we use form_tag-->

<div class="depot_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p> 
	<% end %>
	
	<%= form_tag do %> 
		<fieldset>
			<legend>Please Log In</legend>
	
			<div> 
				<label for="name">Name:</label> 
				<!-- name to give field, value with which to populate field -->
				<!-- the params hash is shared with the sessions controller -->
				<%= text_field_tag :name, params[:name] %>
			</div>
	
			<div>
				<label for="password">Password:</label> 
				<%= password_field_tag :password, params[:password] %>
			</div>
			
			<div>
				<%= submit_tag "Login" %>
			</div> 
		</fieldset>
	<% end %>
</div>
